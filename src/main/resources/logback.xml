<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss} [%thread] %-5level %logger{1000} - %msg%n</pattern>
        </encoder>
    </appender>
    <logger name="org.http4s.client.PoolManager" level="INFO"/>

    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>